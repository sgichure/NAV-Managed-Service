@model ContosoDemoNAV.Models.ProvisioningModel
@{
    ViewBag.Title = "Sign Up for Contoso Family Farming Cloud";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/script/signup.validate.js")" type="text/javascript"></script>
}
<script type="text/javascript">$content = "@Url.Content(@"~/Content")";</script>

<h2>@ViewBag.Title</h2>

<br/><br/>
@using (Html.BeginForm("Index", "SignUp", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <input type="hidden" name="id" value="@Model.CurrentStep"/>
    <input type="hidden" id="step" name="step" value="1"/>

    @Html.Partial("Step" + ((string[])ViewData["Wizard"])[Model.CurrentStep - 1])
    <fieldset id="buttons">
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                @if (Model.CurrentStep > 1)
                {
                    <button type="submit" class="btn btn-default cancel" onclick="$('#step').val('-1');" disableValidation="true">&laquo; Back</button>
                }
                <button type="submit" id="button-next" class="btn btn-default">Next &raquo;</button>
            </div>
        </div>
    </fieldset>
}
